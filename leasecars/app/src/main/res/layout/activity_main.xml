<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity/">

    <TextView
        android:id="@+id/duration_monthID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColorHint="#FFFBA3"
        app:counterEnabled="true"
        app:errorEnabled="true" />


    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration in month"
        android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
       android:id="@+id/down_paymentID"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:counterEnabled="true"
       android:textColorHint="@color/black"
       android:layout_marginBottom="5dp"
       app:errorEnabled="true">
<android.support.design.widget.TextInputEditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Down payment"
       android:inputType="numberDecimal"/>
</android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
       android:id="@+id/leaseID"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColorHint="@color/black"
       android:layout_marginBottom="5dp"
       app:counterEnabled="true"
       app:errorEnabled="true">
<android.support.design.widget.TextInputEditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Lease rate (%)"
       android:inputType="numberDecimal"/>
</android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
       android:id="@+id/car_valueID"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColorHint="@color/black"
       app:counterEnabled="true"
       app:errorEnabled="true">
<android.support.design.widget.TextInputEditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Car value Amount"
       android:inputType="numberDecimal"/>
</android.support.design.widget.TextInputLayout>


<TextView
android:id="@+id/test"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:gravity="center"
android:layout_gravity="center"
android:layout_marginTop="10dp"
android:layout_marginBottom="5dp"
/>

<Button
android:id="@+id/nextID"
android:layout_width="250dp"
android:layout_height="wrap_content"
android:text="@string/calculate"
android:textStyle="bold"
android:background="   "
android:textColor="@color/white"
android:layout_gravity="center"
android:layout_marginTop="10dp"
android:layout_marginBottom="10dp"/>

</linearLayout>










    </android.support.constraint.ConstraintLayout>